<article class="articles">
    <% wineList.forEach(wine=> { %>
        <div class="article">
            <img src="./images/products/<%= wine.imagen %>" alt="<%= wine.nombre %>">
            <h3>
                <%= wine.nombre %>
            </h3>

            <p>
                Bodega: <%= wine.bodega %>
            </p>
            <p class="precio">
                Precio: $<%= wine.precio %>
            </p>
            <form action="/products/productdetail/<%= wine.id%>" method="GET">
                <a href="/products/productdetail/<%= wine.id %>">Ver m√°s</a>
            </form>
            <div class="btn-edit-del">
                <form action="/products/productmod/<%= wine.id%>?_method=put" method="POST">
                    <button type="submit">
                        Editar
                    </button>
                </form>
                <form action="/products/productdel/<%= wine.id%>?_method=delete" method="POST">
                    <button type="submit">
                        Eliminar
                    </button>
                </form>
            </div>
        </div>
        <% }) %>
</article>