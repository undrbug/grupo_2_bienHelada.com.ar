<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head.ejs') %>

  <body>
    <%- include('../partials/header.ejs') %>

    <div class="container">
      <h1>Iniciar sesión</h1>
      <form action="/users/login" method="post">
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="text" id="email" name="email" placeholder="tu@email.com"
          value="<%= locals.oldData ? oldData.email : "" %>"
          />
          <% if (locals.errors && errors.email) { %>
          <p class="text-danger"><%- errors.email.msg %></p>
          <% } %>
        </div>
        <div class="form-group">
          <label for="password">Contraseña:</label>
          <input type="password" id="password" name="password" />
          <% if (locals.errors && errors.password) { %>
            <p class="text-danger"><%- errors.password.msg %></p>
            <% } %>
        </div>
        <div class="checkbox">
          <input type="checkbox" id="rememberMe" name="rememberMe" />
          <label for="rememberMe">Recordarme</label>
        </div>
        <button type="submit">Iniciar sesión</button>
        <div class="form-group">
          <p>¿Aún no tienes cuenta? <a href="/users/register">Registrate</a></p>
        </div>
        <a href="/users/recuperarpassword" id="forgotPassword"
          >¿Olvidaste tu contraseña?</a
        >
      </form>
    </div>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
