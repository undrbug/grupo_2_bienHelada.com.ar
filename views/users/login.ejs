<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head.ejs') %>

    <%- include('../partials/header.ejs') %>
    <main class="form-section">
    <div class="container">
      <h2>Iniciar sesión</h2>
      <form action="/users/login" method="post">
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="text" name="email" placeholder="tu@correo.com"
          value="<%= locals.oldData ? oldData.email : "" %>" /> <% if
          (locals.errors && errors.email) { %>
          <p class="text-danger"><%- errors.email.msg %></p>
          <% } %>
        </div>
        <div class="form-group">
          <label for="password">Contraseña:</label>
          <input type="password" name="password" />
          <% if (locals.errors && errors.password) { %>
          <p class="text-danger"><%- errors.password.msg %></p>
          <% } %>
        </div>
        <div class="checkbox">
          <input type="checkbox" id="rememberMe" name="rememberMe" />
          <label for="rememberMe">Recordarme</label>
        </div>
        <input type="submit" value="Iniciar sesión"></input>
        <div class="form-group">
          <p>¿Aún no tienes cuenta? <a href="/users/register">Registrate</a></p>
        </div>
        <a href="/users/recuperarpassword" id="forgotPassword"
          >¿Olvidaste tu contraseña?</a
        >
      </form>
    </div>
  </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
