<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head.ejs') %>

  <body>
    <%- include('../partials/header.ejs') %>

    <div class="container">
      <h1>User Profile:</h1>
      
      <div class="profile-container">
        <div class="profile-card">
            <img src="<%= locals.userLogged.image %>" alt="Imagen de <%= locals.userLogged.first_name %>" class="profile-image">
            <h2 class="profile-name"><%= locals.userLogged.last_name %>, <%= locals.userLogged.first_name %></h2>
            <p class="profile-email"><%= locals.userLogged.phone %></p>
            <p class="profile-email"><%= locals.userLogged.adress %></p>
            <p class="profile-email"><%= locals.userLogged.country %></p>
            <p class="profile-email"><%= locals.userLogged.state %></p>
            <% if (locals.userLogged.isAdmin) { %>
              <p class="profile-email">ROL: Administrador</p>
            <% } else { %>
              <p class="profile-email">ROL: Usuario</p>
            <% } %>

            <p class="profile-email"><%= locals.userLogged.email %></p>
        </div>
    </div>

    </div>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
